#!/bin/sh

build() {
	for entry in $(ls ${1}); do
		src=${1}/${entry}
		dest=${2}/${entry}
		if [ -f ${src} ]; then
			cat src/templates/head > ${dest}
			while IFS= read line; do
				echo "${line}" >> ${dest}
			done < ${src}
			cat src/templates/tail >> ${dest}
		else
			mkdir -p ${dest}
			build ${src} ${dest}
		fi
	done
}

main() {
	mkdir -p build
	build src/pages build
}

main
